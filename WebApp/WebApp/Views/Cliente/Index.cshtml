@{
    ViewData["Title"] = "Cadastro";
}

<div class="container card p-3">
    <form id="cadastroForm" action="#" method="get">
        <input type="hidden" class="form-control" name="id" value="@ViewBag.idCliente" id="idCliente">
        <input type="hidden" class="form-control" name="dataInsercao" id="dataInsercao">
        <div class="form-row row">
            <div class="form-group col-md-6">
                <label for="inputName">Nome</label>
                <input type="text" class="form-control" name="nome" id="inputName" placeholder="Nome" required>
            </div>
            <div class="form-group col-md-2">
                <label for="inputZip" class="">Cep</label>
                <div class="input-group">
                    <input type="text" onchange="findCep(this)" class="form-control" id="inputZip" aria-label="Cep">
                    <div class="input-group-append">
                        <div class="spinner-border" role="status" id="spinner-zip" style="display: none">
                            <span class="sr-only"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="form-row">

            

            <div class="row">
                <div class="form-group col-md-4">
                    <label for="inputAddress">Endereço</label>
                    <input type="text" class="form-control" name="endereco" id="inputAddress" placeholder="Endereço" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputCity">Cidade</label>
                    <input type="text" class="form-control" name="cidade" id="inputCity" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputState">Estado</label>
                    <select name="uf" id="inputState" class="form-control inputState" required>
                        <option value="" selected disabled>Selecione a UF</option>
                    </select>
                </div>
            </div>


        </div>
        <button class="btn btn-primary mt-2 fa-pull-right" type="submit">Salvar</button>

    </form>
</div>