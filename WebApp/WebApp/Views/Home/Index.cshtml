@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center card p-3" style="width:100%">
    <form class="p-2 m-2" id="filterForm" action="#" method="get">
        <div class="input-group">
            <input type="text" class="form-control m-1" placeholder="Name" name="nameFilter">
            <input type="text" class="form-control m-1" placeholder="Address" name="addressFilter">
            <input type="text" class="form-control m-1" placeholder="City" name="cityFilter">
            <select class="form-control m-1 inputState" placeholder="State" name="stateFilter">
                <option value="" selected>Selecione a UF</option>
            </select>
            <input type="date" class="form-control m-1" placeholder="Registration Date" name="dateFilter">
            <div class="input-group-append m-1">
                <button class="btn btn-primary" type="submit" id="applyFilters">Filtrar</button>
                <button class="btn btn-primary" id="clearFilters">Limpar Filtros</button>
            </div>
        </div>
    </form>
    <table class="table table-striped table-bordered rounded" id="clientTable">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Endereco</th>
                <th scope="col">Cidade</th>
                <th scope="col">UF</th>
                <th scope="col">Dt. Cadastro</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
        </tbody>

    </table>    